<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/user_item_border">

    <!-- Avatar -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/github_avatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Login -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/github_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:clickable="false"
        android:gravity="center"
        android:textSize="30sp"
        android:shadowColor="@color/colorShadowText"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/github_id"
        app:layout_constraintTop_toBottomOf="@+id/github_avatar"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <!-- id -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/github_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:clickable="false"
        android:gravity="center"
        android:textSize="30sp"
        android:shadowColor="@color/colorShadowText"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="4"
        app:layout_constraintStart_toEndOf="@+id/github_login"
        app:layout_constraintTop_toTopOf="@+id/github_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

</androidx.constraintlayout.widget.ConstraintLayout>